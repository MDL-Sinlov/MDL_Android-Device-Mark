<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Sinlov.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Sinlov.TextView.Select" parent="@style/Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Sinlov.TextView.Select.MW" parent="Sinlov.TextView.Select">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Sinlov.Button.Menu.MW" parent="Sinlov.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Sinlov.Button.Test.Small" parent="Sinlov.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>
